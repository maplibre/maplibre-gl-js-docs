{
  "rules": {
    "xss/no-mixed-html": "off",
    "es/no-typed-arrays": "off"
  },
  "overrides": [{
    "files": ["*.html"],
    "parser": "espree",
    "parserOptions": {
      "ecmaVersion": 2020,
      "sourceType": "script"
    },
    "plugins": ["html"],
    "globals": {
      "maplibregl": true,
      "mapboxgl": true,
      "mlcontour": true,
      "MaplibreGeocoder": true,
      "MapboxDirections": true,
      "turf": true,
      "d3": true,
      "Uint8Array": true,
      "Float32Array": true,
      "MapboxDraw": true,
      "mapboxSdk": true
    },
    "rules": {
      "flowtype/require-valid-file-annotation": [0],
      "strict": "off",
      "no-unused-vars": ["error", {"varsIgnorePattern": "map|popup|toggleSidebar|marker"}],
      "no-loop-func": "off",
      "no-var": "off",
      "prefer-arrow-callback": "off",
      "prefer-template": "off",
      "object-shorthand": "off",
      "es/no-promise": "off",
      "es/no-async-functions": "off"
    },
    "env": {
      "browser": true
    }
  }]
}
